<Window x:Class="Microhardness.View.KnownIssues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microhardness.View"
        mc:Ignorable="d"
        Title="KnownIssues" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Known Issues:" FontSize="40" />
            <TextBlock Text="- Charts only prints if tab is selected first"
                       FontSize="25" />
        </StackPanel>
        <Button Content="OK"
                Grid.Row="1"
                Height="50"
                HorizontalAlignment="Center"
                Width=" 150"
                Margin="50"
                Click="Close_Click"
                FontSize="25" />
    </Grid>
</Window>